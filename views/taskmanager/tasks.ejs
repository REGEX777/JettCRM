<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= project.name %> – Your Tasks</title>
  <link rel="stylesheet" href="/css/output.css" />
  <script src="https://kit.fontawesome.com/82eb69e53c.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
</head>

<body class="bg-gray-50 min-h-screen font-sans text-gray-900">

  <%- include('../fragments/alerts'); -%>



  <header class="bg-white border-b border-gray-200  px-6 py-4 flex items-center justify-between">
    <div class="flex items-center gap-4">
      <% if (typeof backBtnLink !== 'undefined' && backBtnLink) { %>
      <a href="<%= backBtnLink %>" class="flex items-center text-gray-500 hover:text-gray-700">
        <i class="fa-solid fa-arrow-left pr-2"></i>
      </a>
      <% } %>
      <h1 class="text-lg font-semibold"><%= headerText %></h1>
    </div>



    <div class="relative">
      <button id="dropdownHoverButton" data-dropdown-toggle="dropdownHover"
        class="flex items-center gap-2 hover:bg-gray-100 p-1 rounded-lg transition">
        <i class="fa-solid fa-angle-down text-gray-500"></i>
        <img alt="profilepic" src="<%= user.profilePicture %>" class="h-10 w-10 bg-gray-200 rounded-lg object-cover">
      </button>

      <div id="dropdownHover" class="z-50 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
        <ul class="py-2 text-sm text-gray-700">
          <li>
            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Settings</a>
          </li>
          <li>
            <a href="#" class="block px-4 py-2 hover:bg-gray-100">Sign out</a>
          </li>
        </ul>
      </div>
    </div>
  </header>
  
  <!-- main stuff -->

  <div class="max-w-6xl mx-auto px-4 sm:px-6 pt-6 pb-10">

    <section class="bg-white rounded-xl border border-gray-200  hover:border-indigo-300 hover:shadow-md  transition overflow-hidden p-8">
      <div class="flex flex-col gap-1">
        <h1 class="text-xl font-semibold text-gray-900">
          Tasks for <span class="text-indigo-600"><%= project.name %></span>
        </h1>
        <p class="text-sm text-gray-500">View and manage your assigned tasks</p>
      </div>
    </section>

    <section class="mt-8">
      <% if (tasks.length === 0) { %>
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-10 text-center">
        <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-5">
          <i class="fas fa-tasks text-gray-400 text-xl"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No Tasks to Display</h3>
        <p class="text-gray-500 max-w-md mx-auto">You currently have no tasks assigned in this project.</p>
      </div>
      <% } else { %>
      <div class="mb-4 flex justify-between items-center">
        <h2 class="text-lg font-semibold text-gray-900">Your Assigned Tasks</h2>
        <span class="text-sm text-gray-500"><%= tasks.length %> tasks</span>
      </div>

      <div class="space-y-4">
        <% tasks.forEach(task => { %>
        <% const badgeClass = ({
                working:           'bg-blue-50 text-blue-700 ring-1 ring-blue-200',
                'pending approval':'bg-purple-50 text-purple-700 ring-1 ring-purple-200',
                completed:         'bg-emerald-50 text-emerald-700 ring-1 ring-emerald-200'
              }[task.status?.toLowerCase()]) || 'bg-gray-100 text-gray-700 ring-1 ring-gray-200'; %>

        <article
          class="bg-white rounded-xl border border-gray-200  hover:border-indigo-300 hover:shadow-md  transition overflow-hidden p-8">
          <div class="flex items-start justify-between gap-4">
            <div class="min-w-0">
              <div class="flex items-center gap-3 mb-2">
                <h3 class="text-base font-semibold text-gray-900 truncate group-hover:text-indigo-600 transition">
                  <%= task.taskname %></h3>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badgeClass %>">
                  <%= (task.status || 'unknown').charAt(0).toUpperCase() + (task.status || 'unknown').slice(1) %>
                </span>
              </div>
              <p class="text-sm text-gray-700 mb-3 line-clamp-3"><%= task.taskdescription %></p>

              <div class="flex items-center text-sm text-gray-500 gap-3">
                <i class="far fa-calendar-alt"></i>
                <span><%= task.deadlineDate ? new Date(task.deadlineDate).toLocaleDateString() : 'No deadline' %></span>
              </div>
            </div>

            <div class="flex shrink-0 gap-2">
              <% if (task.status === 'pending approval') { %>
              <button onclick="openModal('<%= task._id %>', '<%= project._id %>')"
                class="px-3 py-1.5 text-sm font-medium text-white rounded-lg bg-amber-500 hover:bg-amber-600 transition">
                <i class="fas fa-pencil-alt mr-1"></i> Update
              </button>
              <% } else if (task.status !== 'completed') { %>
              <button onclick="openModal('<%= task._id %>', '<%= project._id %>')"
                class="px-3 py-1.5 text-sm font-medium text-white rounded-lg bg-indigo-600 hover:bg-indigo-700 transition">
                <i class="fas fa-check mr-1"></i> Complete
              </button>
              <% } %>
            </div>
          </div>
        </article>
        <% }) %>
      </div>
      <% } %>
    </section>
  </div>

  
  <!-- prove upload form -->
  <div id="completionModal" class="fixed inset-0 bg-black/60 flex items-center justify-center z-50 hidden" role="dialog"
    aria-modal="true" aria-labelledby="completionModalTitle">
    <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-6 w-full max-w-md">
      <div class="flex items-start justify-between mb-4">
        <h2 id="completionModalTitle" class="text-xl font-semibold text-gray-900">Submit Completion</h2>
        <button type="button" onclick="closeModal()" class="text-gray-400 hover:text-gray-600">
          <i class="fas fa-times"></i>
        </button>
      </div>



      <form id="completionForm" method="POST">
        <input type="hidden" id="taskIdInput" name="taskId" />

        <div class="mb-4">
          <label for="completionLink" class="block text-sm font-medium text-gray-700 mb-1">Verification Link</label>
          <input type="url" id="completionLink" name="completionLink" required placeholder="https://…"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition" />
        </div>

        <div class="flex justify-end gap-3">
          <button type="button" onclick="closeModal()"
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition">
            Cancel
          </button>
          <button type="submit"
            class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg transition">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>




  <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  <script>
    function openModal(taskId, projectId) {
      document.getElementById('completionModal').classList.remove('hidden');
      document.getElementById('taskIdInput').value = taskId;
      document.getElementById('completionForm').action = `/mytasks/complete/${projectId}/${taskId}`;
    }

    function closeModal() {
      document.getElementById('completionModal').classList.add('hidden');
      document.getElementById('completionForm').reset();
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const modal = document.getElementById('completionModal');
        if (!modal.classList.contains('hidden')) closeModal();
      }
    });
  </script>
</body>

</html>