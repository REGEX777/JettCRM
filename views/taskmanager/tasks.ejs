<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project.name %> - Your Tasks</title>
  <link rel="stylesheet" href="/css/output.css">
  <script src="https://kit.fontawesome.com/82eb69e53c.js" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-50 min-h-screen font-sans">

<%- include('../fragments/alerts'); -%>


  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-8">
  
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Tasks for <span class="text-indigo-600"><%= project.name %></span></h1>
        <p class="text-sm text-gray-500">View and manage your assigned tasks</p>
      </div>
      <div class="flex items-center space-x-4">
        <button class="p-2 rounded-full hover:bg-gray-100 transition">
          <i class="fas fa-bell text-gray-600"></i>
        </button>
        <div class="relative">
          <button class="flex items-center space-x-2 focus:outline-none">
            <img alt="profilepic" src="https://www.tlgtrucks.com/Portals/0/adam/Swiper/t-n2Vp1v2025DnecF67fuA/Image/peterbilt-launches-new-model-589-1.jpg?mode=max&w=1920"
                 class="h-10 w-10 rounded-lg object-cover border border-gray-200">
          </button>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm p-6">
      <% if (tasks.length === 0) { %>
        <div class="text-center py-12">
          <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-tasks text-gray-400 text-xl"></i>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No Tasks to Display</h3>
          <p class="text-gray-500 mb-6 max-w-md mx-auto">You currently have no tasks assigned in this project.</p>
        </div>
      <% } else { %>
        <div class="mb-4 flex justify-between items-center">
          <h2 class="text-lg font-semibold text-gray-800">Your Assigned Tasks</h2>
          <span class="text-sm text-gray-500"><%= tasks.length %> tasks</span>
        </div>
        
        <div class="space-y-4">
          <% tasks.forEach(task => { %>
            <div class="border border-gray-200 rounded-lg p-5 hover:border-indigo-300 hover:bg-indigo-50/20 transition-all">
              <div class="flex justify-between items-start">
                <div>
                  <div class="flex items-center mb-2">
                    <h3 class="text-base font-medium text-gray-800"><%= task.taskname %></h3>
                    <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= task.status === 'working' ? 'bg-blue-100 text-blue-800' : '' %>
                      <%= task.status === 'pending approval' ? 'bg-purple-100 text-purple-800' : '' %>
                      <%= task.status === 'completed' ? 'bg-green-100 text-green-800' : '' %>">
                      <%= (task.status || 'unknown').charAt(0).toUpperCase() + (task.status || 'unknown').slice(1) %>
                    </span>
                  </div>
                  <p class="text-sm text-gray-600 mb-3"><%= task.taskdescription %></p>
                  <div class="flex items-center text-sm text-gray-500">
                    <i class="far fa-calendar-alt mr-2"></i>
                    <span><%= task.deadlineDate ? new Date(task.deadlineDate).toLocaleDateString() : 'No deadline' %></span>
                  </div>
                </div>
                <div class="flex space-x-2">
                  <% if(task.status === 'pending approval'){ %>
                    <button onclick="openModal('<%= task._id %>', '<%= project._id %>')" 
                      class="px-3 py-1.5 text-sm text-white rounded-lg bg-yellow-500 hover:bg-yellow-600 transition">
                      <i class="fas fa-pencil-alt mr-1"></i> Update
                    </button>
                  <% }else if(task.status !== 'completed'){ %>
                    <button onclick="openModal('<%= task._id %>', '<%= project._id %>')" 
                      class="px-3 py-1.5 text-sm text-white rounded-lg bg-indigo-600 hover:bg-indigo-700 transition">
                      <i class="fas fa-check mr-1"></i> Complete
                    </button>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <div id="completionModal" class="fixed inset-0 bg-[#00000056] flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-xl shadow-sm p-6 w-full max-w-md">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Submit Completion</h2>
      <form id="completionForm" method="POST">
        <input type="hidden" id="taskIdInput" name="taskId" />
        
        <div class="mb-4">
          <label for="completionLink" class="block text-sm font-medium text-gray-700 mb-1">Verification Link</label>
          <input type="url" id="completionLink" name="completionLink" required placeholder="https://..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition" />
        </div>

        <div class="flex justify-end gap-3">
          <button type="button" onclick="closeModal()" 
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition">
            Cancel
          </button>
          <button type="submit" 
            class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg transition">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  <script>
    function openModal(taskId, projectId) {
      document.getElementById('completionModal').classList.remove('hidden');
      document.getElementById('taskIdInput').value = taskId;
      document.getElementById('completionForm').action = `/mytasks/complete/${projectId}/${taskId}`;
    }

    function closeModal() {
      document.getElementById('completionModal').classList.add('hidden');
      document.getElementById('completionForm').reset();
    }
  </script>
</body>
</html>