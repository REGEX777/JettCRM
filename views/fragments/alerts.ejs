  <% if (success.length > 0) { %>
  <div class="fixed right-6 top-6 z-50 rounded-2xl bg-emerald-600 text-white px-4 py-3 shadow-lg flex items-center gap-3">
    <i class="fas fa-check-circle"></i>
    <div class="text-sm font-medium"><%= success[0] %></div>
    <button onclick="this.parentElement.remove()" class="ml-3 text-white/80 hover:text-white"><i class="fas fa-times"></i></button>
  </div>
  <% } %>

  <% if (error.length > 0) { %>
  <div class="fixed right-6 top-6 z-50 rounded-2xl bg-rose-600 text-white px-4 py-3 shadow-lg flex items-center gap-3">
    <i class="fas fa-exclamation-triangle"></i>
    <div class="text-sm font-medium"><%= error[0] %></div>
    <button onclick="this.parentElement.remove()" class="ml-3 text-white/80 hover:text-white"><i class="fas fa-times"></i></button>
  </div>
  <% } %>