<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Client Dashboard</title>
  <link rel="stylesheet" href="/css/output.css">
  <script src="https://kit.fontawesome.com/82eb69e53c.js" crossorigin="anonymous"></script>
  <style>
    .project-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(53, 70, 255, 0.1);
    }
  </style>
</head>
<body class="bg-[#FAFAFA] min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8"> 
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
      <div>
        <h1 class="text-2xl font-medium text-gray-800">Welcome back, <span class="text-[#3546FF]"><%= client.firstName %></span></h1>
        <p class="text-gray-500 text-sm mt-1">Your active projects at a glance</p>
      </div>
      <div class="mt-4 md:mt-0 flex space-x-3">
        <div class="relative">
          <input type="text" placeholder="Search projects..." class="pl-10 pr-4 py-2 border border-[#D9D9D9] rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-[#3546FF] focus:border-transparent">
          <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <button class="bg-white border border-[#D9D9D9] hover:bg-gray-50 text-gray-700 py-2 px-4 rounded-lg text-sm font-medium flex items-center">
          <i class="fas fa-sliders-h mr-2"></i> Filter
        </button>
      </div>
    </div>
 
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="bg-white rounded-lg border border-[#D9D9D9] p-4">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-blue-50 text-[#3546FF] mr-4">
            <i class="fas fa-project-diagram"></i>
          </div>
          <div>
            <p class="text-sm text-gray-500">Active Projects</p>
            <p class="text-xl font-semibold"><%= projects.length %></p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-lg border border-[#D9D9D9] p-4">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-green-50 text-green-500 mr-4">
            <i class="fas fa-check-circle"></i>
          </div>
          <div>
            <p class="text-sm text-gray-500">Completed</p>
            <p class="text-xl font-semibold"><%= projects.filter(p => p.status === 'completed').length %></p>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-lg border border-[#D9D9D9] p-4">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-yellow-50 text-yellow-500 mr-4">
            <i class="fas fa-clock"></i>
          </div>
          <div>
            <p class="text-sm text-gray-500">In Progress</p>
            <p class="text-xl font-semibold"><%= projects.filter(p => p.status === 'in-progress').length %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg border border-[#D9D9D9] overflow-hidden">
      <div class="border-b border-[#D9D9D9] p-4 flex justify-between items-center">
        <h2 class="font-medium text-gray-800">Your Projects</h2>
      </div>

      <% if (projects.length === 0) { %>
        <div class="p-12 text-center">
          <i class="fas fa-folder-open text-4xl text-gray-300 mb-4"></i>
          <h3 class="text-lg font-medium text-gray-700 mb-2">No projects found</h3>
          <p class="text-gray-500 mb-4">You haven't been added to any projects yet.</p>
          <button class="text-[#3546FF] hover:text-[#2a3acc] font-medium">
            Contact your project manager
          </button>
        </div>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
          <% projects.forEach(project => { %>
            <div class="project-card bg-white rounded-lg border border-[#D9D9D9] overflow-hidden transition duration-200">
              <div class="h-2 <%= project.status === 'completed' ? 'bg-green-500' : project.status === 'on-hold' ? 'bg-gray-500' : 'bg-[#3546FF]' %>"></div>
              <div class="p-5">
                <div class="flex justify-between items-start mb-3">
                  <div>
                    <h3 class="font-medium text-gray-800 mb-1"><%= project.name %></h3>
                    <span class="inline-block px-2 py-1 text-xs rounded-full <%= project.status === 'completed' ? 'bg-green-100 text-green-800' : project.status === 'on-hold' ? 'bg-gray-100 text-gray-800' : 'bg-blue-100 text-blue-800' %>">
                      <%= project.status || 'active' %>
                    </span>
                  </div>
                  <div class="dropdown relative">
                    <button class="text-gray-400 hover:text-gray-600">
                      <i class="fas fa-ellipsis-v"></i>
                    </button>
                  </div>
                </div>
                <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= project.description %></p>
                
                <div class="flex items-center justify-between text-sm">
                  <div class="flex items-center text-gray-500">
                    <i class="far fa-calendar-alt mr-2"></i>
                    <span><%= new Date(project.deadlineDate).toLocaleDateString() %></span>
                  </div>
                  <div class="flex -space-x-2">
                    <% project.assignedTeammates.slice(0, 3).forEach(member => { %>
                      <img class="w-6 h-6 rounded-full border-2 border-white" src="<%= member.avatar || 'https://ui-avatars.com/api/?name=' + member.firstName + '&background=random' %>" alt="<%= member.firstName %>" title="<%= member.firstName %>">
                    <% }) %>
                    <% if (project.assignedTeammates.length > 3) { %>
                      <span class="flex items-center justify-center w-6 h-6 rounded-full bg-gray-200 border-2 border-white text-xs">+<%= project.assignedTeammates.length - 3 %></span>
                    <% } %>
                  </div>
                </div>
              </div>
              <div class="border-t border-[#F0F0F0] px-5 py-3">
                <a href="/client/pv/<%= project._id %>" class="text-[#3546FF] hover:text-[#2a3acc] text-sm font-medium flex items-center">
                  View Project <i class="fas fa-chevron-right ml-2 text-xs"></i>
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>