<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Name - Client View</title>
    <link rel="stylesheet" href="/css/output.css">
    <script src="https://kit.fontawesome.com/82eb69e53c.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
</head>

<body class="bg-gray-50">

    <% if (success.length > 0) { %>
     <div class="h-10 w-full bg-green-500 flex items-center justify-center">
        <p><%= success[0] %></p>
     </div>
    <% } %>

    <% if (error.length > 0) { %>
     <div class="h-10 w-full bg-red-500">
        <p><%= error[0] %></p>
     </div>
    <% } %>
    <div class="max-w-4xl mx-auto p-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-8">
            <div class="flex justify-between items-start">
                <div>
                    <h1 class="text-2xl font-bold text-gray-800"><%= project.name %></h1>
                    <p class="text-gray-500 mt-1">Client Dashboard</p>
                </div>
                <span class="<%= project.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %> text-xs font-medium px-2.5 py-0.5 rounded-full"><%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Project Manager</h3>
                    <p class="mt-1 flex items-center">
                        <span class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center mr-2">
                            <i class="fas fa-user text-blue-600"></i>
                        </span>
                        <%= project.team.owner.firstName +" "+ project.team.owner.lastName %>
                    </p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-500">Timeline</h3>
                    <p class="mt-1 flex items-center">
                        <i class="far fa-calendar text-gray-400 mr-2"></i>
                        <%= new Date(project.createdAt).toLocaleDateString('en-US', { weekday: 'short', month: 'long', day: 'numeric' }) %>
                        -
                        <%= new Date(project.deadlineDate).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' }) %>
                    </p>
                </div>

            </div>

            <div class="mt-6">
                <h3 class="text-sm font-medium text-gray-500">Project Description</h3>
                <p class="mt-1 text-gray-700">
                    <%= project.description %>
                </p>
            </div>
        </div>

        <h2 class="text-xl font-semibold text-gray-800 mb-4">Project Updates</h2>

        <div class="space-y-4">
        <% [...project.updates].reverse().forEach((update, idx) => { %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
            <div class="flex justify-between items-start">
            <div class="flex items-center">
                <span class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center mr-3">
                <i class="fas fa-<%= update.icon === 'paintbrush' ? 'paint-brush' : update.icon %> text-purple-600"></i>
                </span>
                <div>
                <h3 class="font-medium"><%= update.title %></h3>
                <p class="text-sm text-gray-500">
                    <%= new Date(update.createdAt).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %>
                </p>
                </div>
            </div>
            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                <%= update.uType.charAt(0).toUpperCase() + update.uType.slice(1) %>
            </span>
            </div>

            <p class="mt-3 text-gray-700"><%= update.details %></p>

            <div class="mt-3 flex flex-wrap gap-3 items-center"> 
            <a href="#" data-modal-target="modal-<%= idx %>" data-modal-toggle="modal-<%= idx %>" class="text-blue-600 text-sm font-medium flex items-center">
                <i class="far fa-comment mr-1"></i> Add Feedback
            </a>
 
            <div id="modal-<%= idx %>" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-modal md:h-full">
                <div class="relative p-4 w-full max-w-md h-full md:h-auto">
                <div class="relative bg-white rounded-lg shadow">
                    <div class="flex justify-between items-center p-4 border-b rounded-t">
                    <h3 class="text-lg font-semibold text-gray-900">Add Feedback</h3>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center" data-modal-hide="modal-<%= idx %>">
                        <i class="fas fa-times"></i>
                    </button>
                    </div>
                    <form action="/projects/f/<%= project._id %>/update/<%= idx %>/feedback" method="POST" class="p-4 space-y-4">
                    <textarea name="comment" rows="4" class="w-full border rounded p-2 text-sm" placeholder="Write your feedback..." required></textarea>
                    <div class="flex justify-end">
                        <button type="submit" class="px-4 py-2 text-white bg-blue-600 rounded hover:bg-blue-700">Submit</button>
                    </div>
                    </form>
                </div>
                </div>
            </div>
 
            <% if (update.relatedLinks && update.relatedLinks.length > 0) { %>
                <div class="relative inline-block text-left">
                <button id="dropdownToggle-<%= idx %>" data-dropdown-toggle="dropdownMenu-<%= idx %>" class="text-blue-600 text-sm font-medium flex items-center gap-1">
                    <i class="fas fa-link mr-1"></i> Links
                    <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                <div id="dropdownMenu-<%= idx %>" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 absolute mt-2">
                    <ul class="py-2 text-sm text-gray-700" aria-labelledby="dropdownToggle-<%= idx %>">
                    <% update.relatedLinks.forEach(link => { %>
                        <li>
                        <a href="<%= link.link %>" target="_blank" class="block px-4 py-2 hover:bg-gray-100">
                            <%= link.linkTitle %>
                        </a>
                        </li>
                    <% }) %>
                    </ul>
                </div>
                </div>
            <% } %>

            <% if (update.feedbacks && update.feedbacks.length > 0) { %>
                <button type="button" class="text-sm text-blue-600 font-medium flex items-center" data-collapse-toggle="feedback-collapse-<%= idx %>" aria-expanded="false" aria-controls="feedback-collapse-<%= idx %>">
                <i class="fas fa-chevron-down mr-1"></i> View Feedback (<%= update.feedbacks.length %>)
                </button>
            <% } %>
            </div>

            <% if (update.feedbacks && update.feedbacks.length > 0) { %>
            <div class="hidden mt-4 space-y-2" id="feedback-collapse-<%= idx %>">
                <% update.feedbacks.forEach(fb => { %>
                <div class="p-3 bg-gray-50 border border-gray-200 rounded-lg text-sm text-gray-700">
                    <p><%= fb.comment %></p>
                    <p class="text-xs text-gray-400 mt-1"><%= new Date(fb.createdAt).toLocaleDateString('en-US') %></p>
                </div>
                <% }) %>
            </div>
            <% } %>
        </div>
        <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
</body>

</html>