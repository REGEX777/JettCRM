<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Settings</title>
  <link rel="stylesheet" href="/css/output.css" />
  <script src="https://kit.fontawesome.com/82eb69e53c.js" crossorigin="anonymous"></script>
</head>

<body class="bg-[#F8FAFC] min-h-screen font-poppins text-gray-800">

  <% if (success.length > 0) { %>
  <div class="h-10 w-full bg-green-500 flex items-center justify-center">
    <p class="text-white"><%= success[0] %></p>
  </div>
  <% } %>
  <% if (error.length > 0) { %>
  <div class="h-10 w-full bg-red-500 flex items-center justify-center">
    <p class="text-white"><%= error[0] %></p>
  </div>
  <% } %>

  <div class="flex">
    <!-- Sidebar -->
    <%- include('../fragments/sidebar'); -%>

    <main class="ml-[24rem] w-[calc(100%-24rem)] px-10 py-8 space-y-10">
      <%- include('../fragments/header'); -%>


      <section class="bg-white rounded-2xl shadow p-8">
        <form action="/settings/personal" method="POST" enctype="multipart/form-data"
          class="bg-white rounded-2xl shadow p-8">
          <h2 class="text-lg font-semibold border-b border-gray-100 pb-4 mb-6">Personal Information</h2>

          <!-- ts so annoying gng T_T -->
          <!-- why wont it work Im crying please for gods sake work  -->
          <div class="flex flex-col md:flex-row gap-8">
            <div class="relative h-[15rem] w-[15rem] group overflow-hidden rounded-lg">
              <!-- profile pic -->
              <img src="<%= user.profilePicture %>" alt="Profile Picture"
                class="w-full h-full object-cover transition duration-300 group-hover:brightness-75 rounded-lg"
                id="profilePreview">

              <div class="absolute top-2 right-2 z-10">
                <div class="relative group/dots">
                  <button type="button" id="dropdownHoverButton" data-dropdown-toggle="dropdownHover"
                    data-dropdown-trigger="hover" class="text-black font-bold text-2xl p-2 bg-white rounded-full">
                    <i class="fa-solid fa-ellipsis-vertical"></i>
                  </button>

                  <div id="dropdownHover"
                    class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-44 dark:bg-gray-700">
                    <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownHoverButton">
                      <li>
                        <a href="#" onclick="triggerFileInput()"
                          class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Change
                          Profile Picture</a>
                      </li>
                      <li>
                        <a href="/settings/profilePicture/delete"
                          class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Remove
                          Profile Picture</a>
                      </li>
                      <li>
                        <a href="<%= user.profilePicture %>" target="_blank"
                          class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">View
                          Profile Picture</a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <input type="file" name="profileImage" id="profilePictureInput" accept="image/*" class="hidden">
            </div>

            <div class="flex-grow grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="text-sm text-gray-600 mb-1 block">Full Name</label>
                <input name="firstName" type="text" value="<%= user.firstName %>"
                  class="w-full border border-gray-200 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-100" />
                              
              </div>
              <div>
                <label class="text-sm text-gray-600 mb-1 block">Last Name</label>
                <input name="lastName" type="text" value="<%= user.lastName %>"
                  class="w-full border border-gray-200 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-100" />
              </div>
            </div>
          </div>

          <div class="flex justify-end mt-6">
            <button type="submit" class="bg-[#3546FF] text-white px-6 py-2 rounded-lg hover:bg-[#2a38cc] transition">
              Save
            </button>
          </div>
        </form>
        <div class="mt-8 bg-white shadow-md border border-gray-200 rounded-lg p-6 w-full">
          <h2 class="text-lg font-semibold mb-4 text-gray-800">Change Email Address</h2>
          <!-- email form -->
          <form action="/settings/email/update" method="post">
            <div class="mb-4">
              <label for="currentEmail" class="block text-sm text-gray-600 mb-1">Current Email</label>
              <input type="email" id="currentEmail" disabled value="<%= user.email %>"
                class="w-full px-3 py-2 bg-gray-100 rounded-md border border-gray-300 text-gray-700">
            </div>

            <div class="mb-4">
              <label for="newEmail" class="block text-sm text-gray-600 mb-1">New Email</label>
              <input type="email" name="newEmail" id="newEmail" placeholder="Enter new email address"
                class="w-full px-3 py-2 border rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none">
            </div>

            <button
              class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-md transition-all duration-200">
              Update Email
            </button>
          </form>
        </div>
      </section>
    </main>

  </div>

  <!-- flowbite script -->
  <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const preview = document.getElementById('profileImagePreview');
      const input = document.getElementById('profileImageUpload');

      input.addEventListener('change', (e) => {
        const file = e.target.files ?. [0];
        if (file) {
          const reader = new FileReader();
          reader.onload = (event) => {
            preview.src = event.target.result
          };
          reader.readAsDataURL(file);
        }
      });
    });

    const input = document.getElementById('profilePictureInput');
    const image = document.getElementById('profilePreview');

    function triggerFileInput() {
      input.click();
    }

    input.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = function (event) {
        image.src = event.target.result;
      };
      reader.readAsDataURL(file);
    });
  </script>

</body>

</html>