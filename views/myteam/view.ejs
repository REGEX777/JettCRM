<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Projects</title>
    <link rel="stylesheet" href="/css/output.css">
    <script src="https://kit.fontawesome.com/82eb69e53c.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="w-full">
        <header class="bg-white border-b border-gray-200 px-10 py-4 flex justify-between items-center">
            <h2 class="text-lg font-medium text-gray-700">Team Projects</h2>
            <div class="flex items-center space-x-4">
                <button class="p-2 rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200 transition-colors">
                    <i class="fas fa-bell"></i>
                </button>
                <div class="relative">
                    <button class="flex items-center space-x-2 focus:outline-none">
                        <div class="w-8 h-8 rounded-full bg-indigo-500 flex items-center justify-center text-white font-medium">
                            A
                        </div>
                        <i class="fas fa-chevron-down text-gray-500 text-xs"></i>
                    </button>
                </div>
            </div>
        </header>

        <main class="p-10">
            <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
                <h1 class="text-2xl font-bold text-gray-800 mb-4"><%= team.name %></h1>
                <p class="text-gray-700">Team ID: <span class="font-mono text-gray-600"><%= team._id %></span></p>
            </div>

            <div class="mb-6">
                <p class="text-xl font-semibold text-gray-800">My Projects</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% projects.forEach(project => { %>
                <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 transition-all duration-300 hover:shadow-md flex flex-col h-full">
                    <div class="flex-grow">
                        <div class="flex justify-between items-start mb-4">
                            <h2 class="text-lg font-medium text-gray-800"><%= project.name %></h2>
                            <span class="flex items-center px-2 py-1 rounded-full text-xs 
                                <%= project.status === 'active' ? 'bg-green-100 text-green-800' : '' %>
                                <%= project.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : '' %>
                                <%= project.status === 'completed' ? 'bg-blue-100 text-blue-800' : '' %>">
                                <span class="w-2 h-2 rounded-full mr-2 
                                    <%= project.status === 'active' ? 'bg-green-500' : '' %>
                                    <%= project.status === 'pending' ? 'bg-yellow-500' : '' %>
                                    <%= project.status === 'completed' ? 'bg-blue-500' : '' %>">
                                </span>
                                <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                            </span>
                        </div>

                        <div class="space-y-3 text-sm text-gray-600 mb-6">
                            <div class="flex items-start">
                                <i class="far fa-calendar-alt mt-1 mr-2 text-gray-400 flex-shrink-0"></i>
                                <div>
                                    <p class="font-medium text-gray-500">Started On</p>
                                    <p><%= new Date(project.createdAt).toLocaleDateString() %></p>
                                </div>
                            </div>
                            <div class="flex items-start">
                                <i class="far fa-clock mt-1 mr-2 text-gray-400 flex-shrink-0"></i>
                                <div>
                                    <p class="font-medium text-gray-500">Deadline</p>
                                    <p><%= new Date(project.deadlineDate).toLocaleDateString() %></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-auto pt-4 border-t border-gray-100">
                        <a href="/mytasks/<%= project._id %>/tasks" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <i class="fa-solid fa-clipboard pr-2"></i> See Tasks
                        </a>
                    </div>
                </div>
                <% }) %>
            </div>
        </main>
    </div>
</body>
</html>